{
  "name": "sample-graphql",
  "version": "1.0.0",
  "description": "this is a Polutz module.",
  "main": "./dist/index.js",
  "typings": "src/index.ts",
  "scripts": {
    "lint": "tslint ./src/**/*.ts ./src/**/*.test.ts ./src/**/*.d.ts",
    "js": "rimraf ./dist-esnext && tsc && rimraf ./dist && babel ./dist-esnext -d ./dist --source-maps",
    "pretest": "npm-run-all --parallel js lint",
    "mocha": "mocha ./dist/**/*.js --require babel-polyfill",
    "test": "nyc npm run mocha && nyc report --reporter=html --reporter=text-lcov > coverage.lcov && codecov --token=f5186102-ac15-4a2f-9212-bf219e981ada",
    "test:cover": "npm run test && opn ./coverage/index.html",
    "predebug": "npm run pretest",
    "debug": "node --nolazy --debug-brk=5858 ./dist/index.js",
    "docs:build": "typedoc --out ./docs ./ --includeDeclarations --excludeExternals --exclude '**/*.test.ts'",
    "docs": "npm run docs:build && opn ./docs/index.html",
    "start": "npm-run-all --parallel gensalt server",
    "server": "npm run js && babel-node ./dist/index.js",
    "gensalt": "node gensalt.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/polutz/sample-graphql.git"
  },
  "author": "github.com/angeloocana",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/polutz/sample-graphql/issues"
  },
  "homepage": "https://github.com/polutz/sample-graphql#readme",
  "devDependencies": {
    "@types/mocha": "^2.2.40",
    "@types/node": "^8.0.25",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "codecov": "^2.3.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.5.0",
    "mocha-lcov-reporter": "^1.3.0",
    "npm-run-all": "^4.0.2",
    "nyc": "^11.1.0",
    "opn-cli": "^3.1.0",
    "ptz-assert": "^1.6.8",
    "rimraf": "^2.6.1",
    "sinon": "^3.2.1",
    "tslint": "^5.7.0",
    "typedoc": "^0.8.0",
    "typescript": "^2.4.2"
  },
  "dependencies": {
    "@types/mongodb": "^2.2.10",
    "axios": "^0.16.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.3",
    "dotenv": "^4.0.0",
    "express": "^4.15.2",
    "express-graphql": "^0.6.7",
    "graphql": "^0.11.1",
    "graphql-relay": "^0.5.2",
    "mongodb": "^2.2.31",
    "ptz-core-domain": "^2.1.2",
    "ptz-core-repository": "^2.1.3",
    "ptz-log": "^1.1.0",
    "ptz-log-file": "^1.0.5",
    "ptz-user-app": "^2.1.1",
    "ptz-user-domain": "^2.1.1",
    "ptz-user-repository": "^2.1.3"
  }
}
